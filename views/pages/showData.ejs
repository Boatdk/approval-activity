<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body class="container">

  <header>
    <% include ../partials/header %>
  </header>

  <main>

    <style>
      table {
              font-family: arial, sans-serif;
              border-collapse: collapse;
              width: 100%;
          }
          
          td, th {
              border: 1px solid #dddddd;
              text-align: left;
              padding: 8px;
          }
          
          tr:nth-child(even) {
              background-color: #dddddd;
          }
          </style>
    <div class="jumbotron">
      <h2>Activity</h2>
      <table>
        <thead class="thead-light">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Facaulty</th>
            <th>Samo</th>
            <th>Union</th>
            <th>Council</th>
            <th>Affair</th>
            <th>Tel</th>
            <th>More</th>
          </tr>
        </thead>

        <% data.forEach(function(Data) { %>
        <tr>
          <td>
            <%= Data.id %>
          </td>
          <td>
            <%= Data.name %>
          </td>
          <td>
            <%= Data.facaulty %>
          </td>
          <td>
            <% if(Data.samo) {%>
            <i class="fas fa-check"></i>
            <% } else { %>
            <i class="fas fa-times"></i>
            <% }  %>
          </td>
          <td>
            <% if(Data.sUnion) {%>
            <i class="fas fa-check"></i>
            <% } else { %>
            <i class="fas fa-times"></i>
            <% }  %>
          </td>
          <td>
            <% if(Data.sCouncil) {%>
            <i class="fas fa-check"></i>
            <% } else { %>
            <i class="fas fa-times"></i>
            <% }  %>
          </td>
          <td>
            <% if(Data.sAffair) {%>
            <i class="fas fa-check"></i>
            <% } else { %>
            <i class="fas fa-times"></i>
            <% }  %>
          </td>
          <td>
            <%= Data.tel %>
          </td>
          <td>
            <form>
              <button type="button" class="btn btn-info" onclick="window.location.href='/activity/detail?id=<%= Data.id %>'">detail</button>
            </form>
          </td>

        </tr>
        <% }); %>
      </table>

    </div>
  </main>


  <footer>
    <% include ../partials/footer %>
  </footer>

</body>

</html>